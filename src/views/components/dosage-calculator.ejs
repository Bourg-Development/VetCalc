<!-- views/components/dosage-calculator.ejs -->
<div class="dashboard-card card">
    <div class="card-header">
        <h3 class="card-title">
            <span class="material-symbols-outlined">calculate</span>
            Schnelle Dosisberechnung
        </h3>
    </div>
    <div class="card-body">
        <form id="quick-dosage-form" class="quick-dosage-form">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="quick-medication" class="form-label">Medikament</label>
                    <select id="quick-medication" name="medicationId" class="form-select" required>
                        <option value="">Medikament wählen...</option>
                        <!-- Options will be populated by loadMedicationsForQuickDosage() -->
                    </select>
                </div>
            </div>

            <div id="dosage-info" class="dosage-info" style="display: none;"></div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="quick-weight" class="form-label">Gewicht (kg)</label>
                    <input type="number" id="quick-weight" name="patientWeight" class="form-input"
                           min="0.1" step="0.1" placeholder="z.B. 12.5" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="quick-dosage" class="form-label">Dosierung (<span class="medication-unit">mg/kg</span>)</label>
                    <input type="number" id="quick-dosage" name="dosagePerKg" class="form-input"
                           min="0.01" step="any" placeholder="Auto" required readonly>
                </div>
            </div>

            <div id="calculation-preview" class="calculation-preview" style="display: none;"></div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <span class="material-symbols-outlined">calculate</span>
                    Berechnen
                </button>
                <button type="button" class="btn btn-secondary" onclick="clearQuickDosage()">
                    <span class="material-symbols-outlined">refresh</span>
                    Zurücksetzen
                </button>
            </div>
        </form>

        <div id="quick-dosage-result" class="quick-dosage-result" style="display: none;"></div>
    </div>
</div>
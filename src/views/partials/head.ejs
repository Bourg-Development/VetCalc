<!-- views/partials/head.ejs -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title ? title + ' - VetCalc' : 'VetCalc - Veterinary Calculator' %></title>
    <meta name="description" content="<%- description || 'Professional veterinary dosage calculator powered by Bourg Development' %>">

    <!-- Favicon -->
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="/img/apple-touch-icon.png">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- CSS -->
    <link rel="stylesheet" href="/static/stylesheets/common/main.css">
    <link rel="stylesheet" href="/static/stylesheets/common/components/navbar.css">
    <link rel="stylesheet" href="/static/stylesheets/common/components/footer.css">
    <link rel="stylesheet" href="/static/stylesheets/common/components/stats-grid.css">
    <link rel="stylesheet" href="/static/stylesheets/common/components/dashboard-cards.css">
    <link rel="stylesheet" href="/static/stylesheets/common/components/forms.css">
    <link rel="stylesheet" href="/static/stylesheets/common/components/charts.css">

    <!-- Page-specific CSS -->
    <% if (typeof pageCss !== 'undefined') { %>
        <%- pageCss %>
    <% } %>

    <!-- Chart.js (only if needed) -->
    <% if (currentPage === 'dashboard') { %>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <% } %>
</head>